<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <% if @operation == "add" %>
      <%= @num1 + @num2 %>
    <% elsif @operation == "subtract" %>
      <%= @num1 - @num2 %>
    <% elsif @operation == "multiply" %>
      <%= @num1 * @num2 %>
    <% elsif @operation == "divide" %>
      <%= @num1 / @num2 %>
    <% end %>



  </body>
</html>
